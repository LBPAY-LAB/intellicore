# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/supercore
VECTOR_DIMENSION=1536  # OpenAI text-embedding-3-large

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Providers
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# LLM Configuration
LLM_PROVIDER=anthropic  # or openai
CLAUDE_MODEL=claude-opus-4-20250514
EMBEDDING_MODEL=text-embedding-3-large

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Document Processing
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=/tmp/architect-agent/uploads
OCR_LANGUAGE=por  # Portuguese

# BACEN Crawler
BACEN_BASE_URL=https://www.bcb.gov.br
CRAWLER_USER_AGENT=SuperCore-ArchitectAgent/0.1.0
CRAWLER_DELAY_SECONDS=2  # Polite crawling
CRAWLER_MAX_PAGES=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # or console

# Monitoring
PROMETHEUS_PORT=9090
