{
  "dashboard": {
    "title": "SuperCore - Business Metrics",
    "uid": "supercore-business",
    "tags": ["supercore", "business"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Instances by State",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum by (state) (instances_total)",
            "legendFormat": "{{state}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Relationships by Type",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "relationships_total",
            "legendFormat": "{{relationship_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 3,
        "title": "State Transitions per Minute",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "rate(state_transitions_total[5m]) * 60",
            "legendFormat": "{{object_type}}: {{from_state}} -> {{to_state}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Validation Success Rate",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "rate(validation_total{result=\"success\"}[5m]) / rate(validation_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Validations per Second",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 18},
        "targets": [
          {
            "expr": "rate(validation_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "title": "Average Validation Duration",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 18},
        "targets": [
          {
            "expr": "rate(validation_duration_seconds_sum[5m]) / rate(validation_duration_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "RAG Queries by Layer",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(rag_queries_total[5m])",
            "legendFormat": "{{layer}} - {{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "LLM Request Success Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(llm_requests_total{status=\"success\"}[5m]) / rate(llm_requests_total[5m])",
            "legendFormat": "{{provider}} {{model}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit"}
        ]
      },
      {
        "id": 9,
        "title": "Top 10 Most Active Object Types",
        "type": "table",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "topk(10, sum by (object_type) (instances_total))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "object_type": "Object Type",
                "Value": "Instance Count"
              }
            }
          }
        ]
      }
    ]
  }
}
