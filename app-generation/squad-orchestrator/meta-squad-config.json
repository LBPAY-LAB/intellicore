{
  "version": "2.0.0",
  "project": {
    "name": "SuperCore v2.0",
    "type": "fintech-platform",
    "description": "Next-generation financial services platform",
    "stack": {
      "backend": ["Go", "Python"],
      "frontend": ["React", "TypeScript"],
      "infra": ["Kubernetes", "Terraform", "AWS"],
      "database": ["PostgreSQL", "Redis", "MongoDB"],
      "messaging": ["Kafka", "RabbitMQ"]
    }
  },
  "specifications": {
    "main_doc": "CLAUDE.md",
    "base_documentation": "Supercore_v2.0/DOCUMENTACAO_BASE/",
    "requirements": "Supercore_v2.0/DOCUMENTACAO_BASE/requisitos_funcionais_v2.0.md",
    "architecture": "Supercore_v2.0/DOCUMENTACAO_BASE/arquitetura_supercore_v2.0.md",
    "stack": "Supercore_v2.0/DOCUMENTACAO_BASE/stack_supercore_v2.0.md",
    "artifacts_output": "artefactos_implementacao/",
    "skills_path": ".claude/"
  },
  "squads": {
    "meta": {
      "agent": "meta-orchestrator",
      "description": "Supreme coordinator of all squads",
      "creates": ["produto", "arquitetura", "engenharia", "qa"],
      "autonomous_permissions": {
        "can_create_squads": true,
        "can_terminate_squads": true,
        "can_reassign_cards": true,
        "can_escalate_to_human": true,
        "communication_scope": "all_squads"
      }
    },
    "management": {
      "agents": [
        "backlog-manager",
        "work-item-tracker",
        "dependency-orchestrator",
        "scrum-master"
      ],
      "description": "Backlog and workflow management agents (cross-squad)",
      "autonomous_permissions": {
        "can_create_cards": false,
        "can_update_card_status": true,
        "can_block_unblock_cards": true,
        "can_create_dependencies": true,
        "can_escalate": true,
        "can_create_files": true,
        "can_edit_files": true,
        "allowed_paths": [
          "/scripts/squad-orchestrator/state/",
          "/artefactos_implementacao/backlog/",
          "/artefactos_implementacao/tasks/",
          "/artefactos_implementacao/dependencies/",
          "/docs/backlog/",
          "/docs/tasks/",
          "/docs/dependencies/"
        ],
        "communication_scope": "all_squads"
      },
      "responsibilities": {
        "backlog-manager": "Master backlog custodian, maintains backlog_master.json, manages card lifecycle",
        "work-item-tracker": "Granular task tracking, real-time progress updates to portal",
        "dependency-orchestrator": "Dependency graph management, critical path analysis, auto-blocking",
        "scrum-master": "Sprint coordination, impediment removal, sub-squad coordination"
      }
    },
    "produto": {
      "agents": ["product-owner", "business-analyst", "ux-designer"],
      "description": "Product management, requirements and UX design",
      "inputs_from": null,
      "outputs_to": "arquitetura",
      "autonomous_permissions": {
        "can_create_cards": true,
        "can_prioritize_backlog": true,
        "can_modify_requirements": true,
        "can_create_files": true,
        "allowed_paths": [
          "/artefactos_implementacao/produto/",
          "/Supercore_v2.0/DOCUMENTACAO_BASE/"
        ],
        "read_only_paths": [
          "/Supercore_v2.0/DOCUMENTACAO_BASE/requisitos_funcionais_v2.0.md",
          "/Supercore_v2.0/DOCUMENTACAO_BASE/arquitetura_supercore_v2.0.md",
          "/Supercore_v2.0/DOCUMENTACAO_BASE/stack_supercore_v2.0.md"
        ]
      }
    },
    "arquitetura": {
      "agents": ["tech-lead", "solution-architect", "security-architect"],
      "description": "Technical architecture and design",
      "inputs_from": "produto",
      "outputs_to": "engenharia",
      "autonomous_permissions": {
        "can_create_cards": true,
        "can_approve_architecture": true,
        "can_create_files": true,
        "can_edit_files": true,
        "allowed_paths": [
          "/artefactos_implementacao/arquitetura/",
          "/CLAUDE.md"
        ],
        "read_only_paths": [
          "/Supercore_v2.0/DOCUMENTACAO_BASE/"
        ],
        "can_run_commands": true,
        "allowed_commands": ["tree", "ls", "find", "grep"]
      }
    },
    "engenharia": {
      "manager": "scrum-master",
      "description": "Engineering development coordination",
      "inputs_from": "arquitetura",
      "outputs_to": "qa",
      "sub_squads": {
        "frontend": {
          "lead": "frontend-lead",
          "agents": ["frontend-developer"],
          "description": "Frontend development with React, TypeScript, Tailwind CSS",
          "autonomous_permissions": {
            "can_create_files": true,
            "can_edit_files": true,
            "allowed_paths": [
              "/artefactos_implementacao/engenharia/frontend/",
              "/frontend/",
              "/src/components/",
              "/src/pages/"
            ],
            "read_only_paths": [
              "/Supercore_v2.0/DOCUMENTACAO_BASE/",
              "/artefactos_implementacao/arquitetura/"
            ],
            "can_run_commands": true,
            "allowed_commands": ["npm run dev", "npm run build", "npm test", "npm run lint", "npx playwright test"],
            "can_commit_changes": true,
            "can_update_tasks": true,
            "can_transition_cards": true
          }
        },
        "backend": {
          "lead": "backend-lead",
          "agents": ["backend-developer"],
          "description": "Backend development with Go, PostgreSQL, REST/GraphQL APIs, MCPs",
          "autonomous_permissions": {
            "can_create_files": true,
            "can_edit_files": true,
            "allowed_paths": [
              "/artefactos_implementacao/engenharia/backend/",
              "/backend/",
              "/services/",
              "/api/",
              "/migrations/"
            ],
            "read_only_paths": [
              "/Supercore_v2.0/DOCUMENTACAO_BASE/",
              "/artefactos_implementacao/arquitetura/"
            ],
            "can_run_commands": true,
            "allowed_commands": ["go build", "go test", "go run", "go mod tidy", "psql", "curl"],
            "can_commit_changes": true,
            "can_update_tasks": true,
            "can_transition_cards": true
          }
        },
        "data": {
          "lead": "data-lead",
          "agents": ["data-engineer"],
          "description": "Data infrastructure: PostgreSQL, RAG pipelines, Vector DB (Qdrant), Graph DB (NebulaGraph)",
          "autonomous_permissions": {
            "can_create_files": true,
            "can_edit_files": true,
            "allowed_paths": [
              "/artefactos_implementacao/engenharia/data/",
              "/backend/migrations/",
              "/backend/models/",
              "/backend/repositories/",
              "/data_pipelines/"
            ],
            "read_only_paths": [
              "/Supercore_v2.0/DOCUMENTACAO_BASE/",
              "/artefactos_implementacao/arquitetura/"
            ],
            "can_run_commands": true,
            "allowed_commands": ["psql", "python3", "docker exec", "qdrant-cli", "nebula-console"],
            "can_commit_changes": true,
            "can_update_tasks": true,
            "can_transition_cards": true
          }
        },
        "fullstack": {
          "lead": "fullstack-lead",
          "agents": ["fullstack-integrator"],
          "description": "End-to-end feature integration across frontend, backend, and data layers",
          "autonomous_permissions": {
            "can_create_files": true,
            "can_edit_files": true,
            "allowed_paths": [
              "/artefactos_implementacao/engenharia/",
              "/backend/",
              "/frontend/",
              "/data_pipelines/",
              "/tests/e2e/"
            ],
            "read_only_paths": [
              "/Supercore_v2.0/DOCUMENTACAO_BASE/",
              "/artefactos_implementacao/arquitetura/"
            ],
            "can_run_commands": true,
            "allowed_commands": ["go build", "go test", "npm run dev", "npm run build", "npm test", "npx playwright test", "psql", "python3"],
            "can_commit_changes": true,
            "can_update_tasks": true,
            "can_transition_cards": true
          }
        }
      },
      "autonomous_permissions": {
        "can_create_cards": true,
        "can_reassign_cards": true,
        "can_update_card_status": true,
        "can_escalate": true
      }
    },
    "qa": {
      "agents": ["qa-lead", "test-engineer", "security-auditor"],
      "description": "Quality assurance and testing",
      "inputs_from": "engenharia",
      "feedback_to": "engenharia",
      "outputs_to": "deploy",
      "final_approval": false,
      "autonomous_permissions": {
        "can_approve_cards": true,
        "can_reject_cards": true,
        "can_create_correction_cards": true,
        "can_create_files": true,
        "allowed_paths": [
          "/artefactos_implementacao/qa/",
          "/tests/",
          "/docs/qa/",
          "/docs/test-reports/"
        ],
        "read_only_paths": [
          "/Supercore_v2.0/DOCUMENTACAO_BASE/",
          "/artefactos_implementacao/produto/",
          "/artefactos_implementacao/arquitetura/",
          "/artefactos_implementacao/engenharia/"
        ],
        "can_run_commands": true,
        "allowed_commands": ["npm test", "pytest", "cypress run", "playwright test"]
      }
    },
    "deploy": {
      "agents": ["deploy-lead"],
      "description": "Infrastructure as Code and CI/CD deployment (IAOps/NoOps)",
      "inputs_from": "qa",
      "final_approval": true,
      "requires_human_approval": true,
      "autonomous_permissions": {
        "can_create_cards": true,
        "can_create_files": true,
        "can_edit_files": true,
        "allowed_paths": [
          "/artefactos_implementacao/deploy/",
          "/infrastructure/",
          "/.github/workflows/",
          "/terraform/",
          "/docs/infrastructure/",
          "/docs/runbooks/"
        ],
        "read_only_paths": [
          "/Supercore_v2.0/DOCUMENTACAO_BASE/",
          "/artefactos_implementacao/qa/"
        ],
        "can_run_commands": true,
        "allowed_commands": [
          "terraform init",
          "terraform plan",
          "terraform validate",
          "tfsec .",
          "checkov -d .",
          "infracost breakdown",
          "aws-vault exec",
          "docker build",
          "docker scan"
        ],
        "can_deploy": true,
        "deployment_targets": ["qa", "staging", "production"]
      },
      "approval_workflow": {
        "qa_environment": {
          "auto_deploy": true,
          "requires_approval": false,
          "triggers": ["all_tests_pass"]
        },
        "staging_environment": {
          "auto_deploy": false,
          "requires_approval": true,
          "approvers": ["tech-lead"],
          "triggers": ["manual"]
        },
        "production_environment": {
          "auto_deploy": false,
          "requires_approval": true,
          "approvers": ["product-owner", "tech-lead"],
          "change_window_required": true,
          "triggers": ["manual"]
        }
      }
    }
  },
  "workflow": {
    "sprint_duration_days": 10,
    "max_qa_retry_cycles": 3,
    "daily_standup": true,
    "auto_escalation": true,
    "card_flow_sequence": [
      "squad-produto",
      "squad-arquitetura",
      "squad-engenharia",
      "squad-qa"
    ],
    "milestones": [
      {
        "phase": 1,
        "name": "Discovery & Planning",
        "description": "Análise de requisitos, criação de cards, wireframes e backlog",
        "progress_range": [0, 15],
        "squads": ["produto"],
        "deliverables": [
          "Cards de features com critérios de aceitação",
          "Wireframes e user flows (UX Designer)",
          "Backlog priorizado"
        ]
      },
      {
        "phase": 2,
        "name": "Architecture & Design",
        "description": "Designs técnicos, schemas, APIs e diagramas",
        "progress_range": [15, 25],
        "squads": ["arquitetura"],
        "deliverables": [
          "ADRs (Architecture Decision Records)",
          "Database schemas (ERD, migrations)",
          "API specs (OpenAPI/Swagger)",
          "Diagramas C4 e infraestrutura"
        ]
      },
      {
        "phase": 3,
        "name": "Data Layer Implementation",
        "description": "PostgreSQL, RAG, Vector DB, Graph DB, MCPs",
        "progress_range": [25, 45],
        "squads": ["engenharia"],
        "sub_squads": ["backend"],
        "deliverables": [
          "PostgreSQL setup + migrations",
          "RAG pipelines operacionais",
          "Qdrant (Vector DB) configurado",
          "NebulaGraph (Graph DB) configurado",
          "MCP servers implementados"
        ]
      },
      {
        "phase": 4,
        "name": "Backend Implementation",
        "description": "APIs Go/Python, Integration Orchestrator, testes",
        "progress_range": [45, 65],
        "squads": ["engenharia"],
        "sub_squads": ["backend"],
        "deliverables": [
          "APIs REST/GraphQL funcionais",
          "Integration Orchestrator (RAG+SQL+Graph+APIs)",
          "Testes backend (unit + integration) ≥80%"
        ]
      },
      {
        "phase": 5,
        "name": "Frontend Implementation",
        "description": "Componentes React, páginas, integração com APIs",
        "progress_range": [65, 80],
        "squads": ["engenharia"],
        "sub_squads": ["frontend"],
        "deliverables": [
          "Componentes React (shadcn/ui)",
          "Páginas (back-office + front-office)",
          "Integração completa com backend APIs",
          "Testes E2E (Playwright)"
        ]
      },
      {
        "phase": 6,
        "name": "QA & Testing",
        "description": "Testes completos, security audit, performance",
        "progress_range": [80, 90],
        "squads": ["qa"],
        "deliverables": [
          "Todos testes passando (unit, integration, E2E)",
          "Security audit completo (sem vulnerabilidades críticas)",
          "Performance testing (latency, throughput)",
          "Coverage ≥80%"
        ]
      },
      {
        "phase": 7,
        "name": "Deployment",
        "description": "IaC, CI/CD, deploy em QA/Staging/Production",
        "progress_range": [90, 100],
        "squads": ["deploy"],
        "deliverables": [
          "Infrastructure as Code (Terraform)",
          "CI/CD pipelines (GitHub Actions)",
          "Deploy em QA (auto)",
          "Deploy em Staging/Production (aprovação)",
          "Monitoring configurado (CloudWatch/Grafana)"
        ]
      }
    ],
    "quality_gates": {
      "code_coverage_min": 80,
      "security_scan_required": true,
      "performance_test_required": true,
      "accessibility_check_required": true
    },
    "implementation_constraints": {
      "zero_tolerance_policy": true,
      "forbidden_practices": [
        "mock_implementations",
        "placeholder_comments",
        "hardcoded_credentials",
        "simplified_logic",
        "fake_data",
        "missing_error_handling",
        "incomplete_tests"
      ],
      "required_standards": {
        "real_database_integration": true,
        "comprehensive_error_handling": true,
        "production_grade_security": true,
        "complete_testing": true,
        "full_documentation": true,
        "observability": true
      },
      "enforcement": {
        "qa_auto_reject_violations": true,
        "tech_lead_final_approval": true,
        "no_temporary_workarounds": true
      }
    }
  },
  "initial_cards": [
    {
      "title": "Define MVP Features and Scope",
      "type": "feature",
      "priority": "CRITICAL",
      "assigned_to_squad": "squad-produto",
      "description": "Analyze requirements and define MVP scope for SuperCore v2.0"
    },
    {
      "title": "Design System Architecture",
      "type": "technical",
      "priority": "CRITICAL",
      "assigned_to_squad": "squad-arquitetura",
      "description": "Create high-level system architecture based on product requirements"
    }
  ],
  "notifications": {
    "enabled": false,
    "channels": [
      {
        "type": "slack",
        "webhook_url": "${SLACK_WEBHOOK_URL}",
        "events": ["squad_blocked", "critical_failure", "sprint_complete"]
      }
    ]
  },
  "monitoring": {
    "metrics_enabled": true,
    "health_check_interval_seconds": 60,
    "dashboard_refresh_seconds": 2,
    "alert_on_blocker": true,
    "alert_on_qa_fail": true
  }
}
