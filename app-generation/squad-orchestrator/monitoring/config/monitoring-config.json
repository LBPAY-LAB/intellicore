{
  "version": "2.0.0",
  "dashboard": {
    "enabled": true,
    "port": 3000,
    "auto_refresh_seconds": 5,
    "theme": "dark",
    "show_metrics": true,
    "show_events": true,
    "max_events_display": 20
  },
  "cli": {
    "enabled": true,
    "refresh_interval_seconds": 5,
    "colored_output": true,
    "show_progress_bars": true
  },
  "notifications": {
    "slack": {
      "enabled": false,
      "webhook_url": "${SLACK_WEBHOOK_URL}",
      "events": [
        "card_done",
        "card_blocked",
        "squad_blocked",
        "qa_rejected",
        "sprint_complete",
        "error"
      ],
      "rate_limit_seconds": 60,
      "channel": "#supercore-monitoring"
    },
    "desktop": {
      "enabled": true,
      "events": [
        "card_blocked",
        "squad_blocked",
        "qa_rejected",
        "sprint_complete"
      ],
      "sound_enabled": true
    },
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "from_address": "supercore@example.com",
      "to_addresses": [],
      "events": [
        "squad_blocked",
        "sprint_complete",
        "error"
      ]
    },
    "telegram": {
      "enabled": false,
      "bot_token": "${TELEGRAM_BOT_TOKEN}",
      "chat_id": "${TELEGRAM_CHAT_ID}",
      "events": [
        "card_done",
        "squad_blocked"
      ]
    }
  },
  "metrics": {
    "collection_enabled": true,
    "collection_interval_seconds": 60,
    "retention_days": 90,
    "export_format": "json",
    "metrics_to_collect": [
      "velocity",
      "qa_rejection_rate",
      "test_coverage",
      "cards_per_status",
      "squad_health",
      "event_counts"
    ]
  },
  "database": {
    "type": "sqlite",
    "path": "monitoring/data/monitoring.db",
    "backup_enabled": true,
    "backup_interval_hours": 24
  },
  "logging": {
    "level": "INFO",
    "file": "monitoring/data/monitor.log",
    "max_size_mb": 100,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "api": {
    "cors_enabled": true,
    "cors_origins": ["*"],
    "rate_limit_per_minute": 60,
    "request_timeout_seconds": 30
  },
  "websocket": {
    "enabled": true,
    "ping_interval_seconds": 30,
    "max_connections": 100,
    "message_queue_size": 1000
  },
  "performance": {
    "cache_enabled": true,
    "cache_ttl_seconds": 5,
    "max_concurrent_requests": 50
  }
}
